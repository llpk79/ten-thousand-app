#:kivy 1.10.1
#: import ScreenManager kivy.uix.screenmanager.ScreenManager
#: import colors colors.colors
#: import rgba kivy.utils.rgba
#: import FallOutTransition kivy.uix.screenmanager.FallOutTransition
#: import CardTransition kivy.uix.screenmanager.CardTransition
#: import SwapTransition kivy.uix.screenmanager.SwapTransition

ScreenManager:
    id: screen_manager
    transition: FallOutTransition(duration = .3)
    MenuScreen:
        id: menu
        name: 'menu'
        manager: 'screen_manager'
    PlayerNumberScreen:
        id: player_number
        name: 'number'
        manager: 'screen_manager'
    PlayerNameScreen:
        id: name
        name: 'name'
        manager: 'screen_manager'
    GameScreen:
        id: game
        name: 'game'
        manager: 'screen_manager'
    SoloGoalScreen:
        id: goal
        name: 'goal'
        manager: 'screen_manger'
    SoloGameScreen:
        id: solo
        name: 'solo'
        manager: 'screen_manager'
    ResultsScreen:
        id: results
        name: 'results'
        manager: 'screen_manager'

<SoloGameButton>:

<FriendsButton>:

<MyOwnSelfButton>:

<BackButton>:
    text: 'BACK'
    pos_hint: {'x': .05, 'y': .05}
    size_hint: (.1, .075)
    color: rgba(colors['text'])
    background_normal: ''
    background_color: rgba(colors['prime dark'])

<Exit>:
    text: 'EXIT'
    pos_hint: {'x': .05, 'y': .05}
    size_hint: .1, .075
    background_normal: ''
    background_color: rgba(colors['prime dark'])


<Background@Image>:
    source: 'images/tabletop4.jpg'
    allow_stretch: True
    keep_ratio: False

<MenuScreen>:
    name: 'menu'
    Background:
    Label:
        text: 'Welcome to Ten Thousand!'
        halign: 'center'
        font_size: 100
        color: rgba(colors['text'])
        size_hint: .4, .1
        pos_hint: {'x': .3, 'y': .8}
    Label:
        text: 'A dice game'
        halign: 'center'
        color: rgba(colors['text'])
        size_hint: .2, .1
        pos_hint: {'x': .4, 'y': .725}
    FriendsButton:
        text: 'PLAY WITH FRIENDS'
        color: rgba(colors['text'])
        font_size: 75
        size_hint: .35, .1
        pos_hint: {'x': .325, 'y': 0.6}
        background_normal: ''
        background_color: rgba(colors['prime dark'])
    MyOwnSelfButton:
        text: 'PLAY VS COMPUTER'
        color: rgba(colors['text'])
        font_size: 75
        size_hint: .35, .1
        pos_hint: {'x': .325, 'y': .4}
        background_normal: ''
        background_color: rgba(colors['prime dark'])
    SoloGameButton:
        text: 'CHALLENGE MODE'
        color: rgba(colors['text'])
        font_size: 75
        size_hint: .35, .1
        pos_hint: {'x': .325, 'y': .2}
        background_normal: ''
        background_color: rgba(colors['prime dark'])
    Exit:

<ResultsScreen>:
    name: 'results'
    Background:
    BoxLayout:
        size_hint: .5, .15
        pos_hint: {'x': .25, 'y': .2}
        spacing: 5
        padding: [5]
        Button:
            text: 'PLAY AGAIN'
            font_size: 75
            background_normal: ''
            background_color: rgba(colors['prime dark'])
            on_release: root.play_again()
        Button:
            text: 'MAIN MENU'
            font_size: 75
            background_normal: ''
            background_color: rgba(colors['prime dark'])
            on_press: root.to_main_menu()

<PlayerNameScreen>:
    name: 'name'
    Background:
    BackButton:
        on_release: root.to_prev_screen()

<PlayerNumberScreen>:
    num_label: num_label
    cont: cont
    name: 'number'
    Background:
    Label:
        text: 'How many people are playing?'
        halign: 'center'
        font_size: 100
        color: rgba(colors['text'])
        size_hint: (.275, .075)
        pos_hint: {'x': .35, 'y': .8}
    Label:
        id: num_label
        text: 'Players Selected: '
        font_size: 75
        size_hint: .2, .1
        pos_hint: {'x': .4, 'y': .15}
    Button:
        id: cont
        size_hint: .2, .1
        pos_hint: {'x': .4, 'y': .05}
        text: 'CONTINUE'
        font_size: 75
        background_normal: ''
        background_color: rgba(colors['prime dark'])
        on_release: root.parent.current = 'name'
        disabled: True
    BackButton:
        on_release: root.to_menu_screen()

<DieHolder>:

<KeeperBox>:

<DieBasket>:
    keeper_box: keeper_box
    size_hint: .7, 0.4
    pos_hint: {'x': 0.0, 'y': 0.7}
    canvas.after:
        Color:
            rgba: root.valid_basket
        Rectangle:
            pos: self.x, self.y
            size: self.width, self.x + 4
    Label:
        text: 'Drag Dice To Line Or Double Tap To Score'
        font_size: 40
        halign: 'center'
        pos_hint: {'x': self.x, 'y': -0.425}
    KeeperBox:
        id: keeper_box
        pos_hint: {'x': .05, 'y': 0.125}
        size_hint: .95, 0.4
        padding: [5]
        spacing: 5
        DieHolder:
        DieHolder:
        DieHolder:
        DieHolder:
        DieHolder:
        DieHolder:

<PlayerArea@Label>:
    color: rgba(colors['text'])
    canvas.before:
        Color:
            rgba: rgba(colors['prime dark'])
        Rectangle:
            pos: self.pos
            size: self.size

<PlayerScore>:
    name: name
    round: round
    total: total
    total_plus: total_plus
    PlayerArea:
        id: name
        text_size: self.width, None
        size_hint: .275, 1
        shorten: True
        shorten_from: 'right'
        halign: 'center'
        bold: True
        font_size: 60
    PlayerArea:
        id: round
        size_hint: .2, 1
        halign: 'left'
        text: 'Round: 0'
        font_size: 60
    PlayerArea:
        id: total
        size_hint: .2, 1
        halign: 'left'
        text: 'Total: 0'
        font_size: 60
    PlayerArea:
        id: total_plus
        size_hint: .325, 1
        halign: 'left'
        font_size: 60
        text: 'Round + Total: 0'

<InformationStation>:
    box: box
    orientation: 'vertical'
    size_hint: .3, 1
    pos_hint: {'x': .7, 'y': 0}
    spacing: 10
    canvas:
        Color:
            rgba: rgba(colors['second'])
        Rectangle:
            size: root.size
            pos: root.pos
    Label:
        text: 'Player Totals'
        font_size: 75
        size_hint: .95, .1
        pos_hint: {'x': .025, 'y': .875}
        canvas.before:
            Color:
                rgba: rgba(colors['second light'])
            Rectangle
                size: self.size
                pos: self.pos
    BoxLayout:
        id: box
        size_hint: 1, .6
        pos_hint: {'x': .05, 'y': .2}
        orientation: 'vertical'
    RulesButton:
        size_hint: .45, .1
        pos_hint: {'x': .025, 'y': .025}
    Quit:
        size_hint: .45, .1
        pos_hint: {'x': .525, 'y': .025}

<ScoreArea>:
    size_hint: .7, 0.1
    pos_hint: {'x': 0, 'y': 0.9}
    spacing: 4
    padding: [4]

<Quit>:
    text: 'QUIT'
    color: rgba(colors['text'])
    font_size: 75
    background_normal: ''
    background_color: rgba(colors['prime dark'])

<Roll>:
    text: 'ROLL \'EM!'
    color: rgba(colors['text'])
    font_size: 90
    background_normal: ''
    background_color: rgba(colors['prime dark'])

<EndTurn>:
    text: 'END TURN'
    color: rgba(colors['text'])
    halign: 'center'
    font_size: 90
    background_normal: ''
    background_color: rgba(colors['prime dark'])

<KeepAll>:
    text: 'SELECT ALL'
    color: rgba(colors['text'])
    font_size: 90
    background_normal: ''
    background_color: rgba(colors['prime dark'])

<RulesButton>:
    text: 'RULES'
    color: rgba(colors['text'])
    font_size: 75
    background_normal: ''
    background_color: rgba(colors['prime dark'])

<GameButtonRow>:
    size_hint: .7, .15
    pos_hint: {'x': 0, 'y': 0}
    padding: [10]
    spacing: 10

<Base>:
    score_area: score_area
    die_basket: die_basket
    dice: dice
    buttons: buttons
    info: info
    Background:
    InformationStation:
        id: info
        active_game: root.active_game
    ScoreArea:
        id: score_area
    DieBasket:
        id: die_basket
        active_game: root.active_game
    Dice:
        id: dice
        size_hint: .7, None
    GameButtonRow:
        id: buttons
        roll: roll
        end_turn: end_turn
        keep: keep
        Roll:
            id: roll
        KeepAll:
            id: keep
        EndTurn:
            id: end_turn

<GameScreen>:
    name: 'game'
    base: base
    Base:
        id: base

<SoloGoalScreen>:
    name: 'goal'
    goals: goals
    cont: cont
    Background:
    BoxLayout:
        id: goals
        points: points
        turns: turns
        diff: diff
        size_hint: .95, .1
        pos_hint: {'x': .025, 'y': .2}
        padding: [5]
        spacing: 5
        Label:
            id: points
            font_size: 75
            halign: 'left'
            text: 'Points goal:'
        Label
            id: turns
            font_size: 75
            text: 'Turn limit:'
        Label
            id: diff
            font_size: 75
            text: 'Difficulty:'
    Button:
        id: cont
        size_hint: .2, .1
        pos_hint: {'x': .4, 'y': .05}
        text: 'CONTINUE'
        font_size: 75
        background_normal: ''
        background_color: rgba(colors['prime dark'])
        on_release: root.parent.current = 'name'
        disabled: True
    BackButton:
        on_release: root.to_menu_screen()

<SoloPlayerScore>:
    name: name
    round: round
    total_plus: total_plus
    progress: progress
    PlayerArea:
        id: name
        text_size: self.width, None
        size_hint: .4, 1
        shorten: True
        shorten_from: 'right'
        halign: 'center'
    PlayerArea:
        id: round
        size_hint: .3, 1
        halign: 'left'
    PlayerArea:
        id: total_plus
        size_hint: .5, 1
        halign: 'left'
    PlayerArea:
        id: progress
        size_hint: .3, 1
        halign: 'left'

<SoloGameScreen>:
    name: 'solo'
    base: base
    Base:
        id: base
